<div>
    <font size="35">@Html.ActionLink("Alineacion de " + @Model.Team1.completeName, "GotToLineUp", new { match = Model.id, team = Model.home }) </font>
    <table style="float: left" class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LineUps.First().Player1.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineUps.First().Player1.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineUps.First().PossiblePosition.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineUps.First().position)
            </th>
        </tr>

        @foreach (var item in Model.LineUps)
        {
            if (item.team == Model.home)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player1.firstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Player1.lastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PossiblePosition.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.position)
                    </td>
                </tr>
            }
        }
    </table>
    @Html.ActionLink("Ver goles", "WatchGoals", new { match = Model.id, team = Model.home})
</div>
